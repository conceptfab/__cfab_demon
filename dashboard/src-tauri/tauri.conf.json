{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TimeFlow",
  "version": "0.1.0",
  "identifier": "com.timeflow.dashboard",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "TimeFlow",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon-32x32.png",
      "icons/favicon-128.png",
      "icons/mstile-150x150.png",
      "icons/mstile-310x310.png",
      "icons/icon.ico"
    ]
  }
}

